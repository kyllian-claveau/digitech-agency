<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php [QSA,L]
RewriteCond 		%{HTTP:Authorization} ^(.*)$ [NC]
RewriteRule 		/.* - [E=HTTP_AUTHORIZATION:%1]
</IfModule>

<VirtualHost *:80>
    ServerName digitech-agency.fr
    DocumentRoot /home/digitechagency/public_html/public

    <Directory /home/digitechagency/public_html/public>
            AllowOverride All
            Options FollowSymLinks
            Order Allow,Deny
            Allow from All
        </Directory>

    <Directory /home/digitechagency/public_html>
        AllowOverride All
        Options FollowSymLinks
        Order Allow,Deny
        Allow from All
        Require all granted
    </Directory>

    ErrorLog /var/log/httpd/digitech-agency_error.log
    CustomLog /var/log/httpd/digitech-agency_access.log combined
</VirtualHost>

RewriteEngine On
RewriteRule ^$ public/ [L]
RewriteRule (.*) public/$1 [L]
